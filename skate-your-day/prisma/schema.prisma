generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  days      Day[]
}

model Day {
  id     String  @id // e.g. "2026-02-06"
  user   User    @relation(fields: [userId], references: [id])
  userId Int
  habits Habit[]
}

model Habit {
  id        Int
  day       Day     @relation(fields: [dayId], references: [id])
  dayId     String
  name      String
  timeLabel String
  timeMins  Int
  y         Int
  completed Boolean

  @@id([id, dayId])
}
